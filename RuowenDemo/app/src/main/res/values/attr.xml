<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义控件MyView的属性-->
    <attr name="newViewText" format="string" />
    <attr name="newViewTextColor" format="color" />
    <attr name="newViewTextSize" format="dimension" />
    <attr name="newViewGravity" format="string" />

    <declare-styleable name="MyViewStyle">
        <attr name="newViewText" />
        <attr name="newViewTextColor" />
        <attr name="newViewTextSize" />
        <attr name="newViewGravity" />
    </declare-styleable>

    <attr name="direction">
        <enum name="rightToLeft" value="0" />
        <enum name="bottomToTop" value="1" />
        <enum name="leftToRight" value="2" />
        <enum name="topToBottom" value="3" />
    </attr>

    <declare-styleable name="MultiDirectionSlidingDrawer">
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="direction" />
        <attr name="originHeight" format="dimension" />
        <attr name="bottomOffset" format="dimension" />
        <attr name="topOffset" format="dimension" />
        <attr name="allowSingleTap" format="boolean" />
        <attr name="animateOnClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circle_color" format="color"/>
    </declare-styleable>

</resources>
